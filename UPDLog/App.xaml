<Application x:Class="UPDLog.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <!-- Button Icons -->
                <ResourceDictionary Source="Icons/start.xaml" />
                <ResourceDictionary Source="Icons/pause.xaml" />
                <ResourceDictionary Source="Icons/cross.xaml" />
                <ResourceDictionary Source="Icons/filter.xaml" />
                <ResourceDictionary Source="Icons/marker.xaml" />

                <!-- Log Message Severity Icons -->
                <ResourceDictionary Source="Icons/error.xaml" />
            
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
